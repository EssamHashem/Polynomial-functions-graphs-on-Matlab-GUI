% --- Executes on button press in pushbutton1.
function pushbutton1_Callback(hObject, eventdata, handles)
% hObject    handle to pushbutton1 (see GCBO)
% eventdata  reserved - to be defined in a future version of MATLAB
% handles    structure with handles and user data (see GUIDATA)

val = str2num(char(get(handles.edit1,'String')))
vmin = str2num(char(get(handles.edit2,'String')))
vmax = str2num(char(get(handles.edit3,'String')))
val2 = str2double(get(handles.edit1, 'String'))
n = str2num(char(get(handles.edit5,'String')))
if         (n == 1)
    derivative = polyder(val);
    set(handles.edit4,'string',num2str(derivative));
else if    (n == 2)
    derivative = polyder(polyder(val));
    set(handles.edit4,'string',num2str(derivative));
else if    (n == 3)
    derivative = polyder(polyder(polyder(val)));
    set(handles.edit4,'string',num2str(derivative));
else  if   (n == 4)
    derivative = polyder(polyder(polyder(polyder(val))));
    set(handles.edit4,'string',num2str(derivative));
else if    (n == 5)
    derivative = polyder(polyder(polyder(polyder(val))));
    set(handles.edit4,'string',num2str(derivative));
    else 
      set(handles.edit4,'string','Please insert the number of order from 1 to 5');  

    end
    end
    end
    
end
end
radio = get (handles.buttons,'SelectedObject')
sosSelection = get(radio,'String')
switch sosSelection 
    case 'Linear axis'
    x = linspace(vmin, vmax, 50);
    pv = polyval(val, x);
    plot(x, pv)
    grid
    ttl = sprintf(['Linear axes, Polynomial with coefficients ' repmat('%.2f  ', 1, length(val))], val);
    title(ttl)
    xlabel('x')
    ylabel('y')
    case 'Logarithmic axis'
    x = linspace(vmin, vmax, 50);  
    pv = polyval(val, x);
    loglog(x, pv)
    grid
    ttl = sprintf(['Logarithmic axes, Polynomial with coefficients ' repmat('%.2f  ', 1, length(val))], val);
    title(ttl)
    xlabel('log x')
    ylabel('log y')
    case 'Logarithmic x axis'
    x = linspace(vmin, vmax, 50);
    pv = polyval(val, x);
    semilogx(x,pv);
       grid
    ttl = sprintf(['x is logarithmic, y is linear, Polynomial with coefficients ' repmat('%.2f  ', 1, length(val))], val);
    title(ttl)
    xlabel('Logarithmic x axis')
    ylabel('Linear y axis')
    case 'Logarithmic y axis'
    x = linspace(vmin, vmax, 50);
    pv = polyval(val, x);
    semilogy(x,pv);
    grid
    ttl = sprintf(['x is linear, y is logarithmic, Polynomial with coefficients ' repmat('%.2f  ', 1, length(val))], val);
    title(ttl)
    xlabel('Linear x axis')
    ylabel('Logarithmic y axis')
end
guidata(hObject, handles);


